{
  "name": "vscode-mollbe-theme",
  "version": "0.0.13",
  "description": "VS Code Theme with dynamic build tools featuring chroma",
  "main": "build.mjs",
  "author": "Benjamin Mollenhauer",
  "license": "MIT",
  "config": {
    "buildOutput": "mollbe-theme/themes/mollbe-theme.json"
  },
  "dependencies": {
    "@mollbe/theme-compiler": "^0.0.1",
    "@svgdotjs/svg.js": "^3.1.2",
    "chroma-js": "^2.4.2",
    "deepmerge": "^4.2.2",
    "glob": "^8.1.0",
    "is-plain-object": "^5.0.0",
    "jsonc-parser": "^3.2.0",
    "nodemon": "^2.0.20",
    "pm2": "^5.2.2",
    "svgdom": "^0.1.11",
    "vsce": "^2.15.0"
  },
  "scripts": {
    "build": "npx --no-install ts-node ./theme/mollbe.ts > ./mollbe-theme/themes/mollbe-theme.json",
    "package": "cd mollbe-theme; npx --no-install vsce package",
    "publish": "cd mollbe-theme; npx --no-install vsce publish --baseImagesUrl \"https://raw.githubusercontent.com/mollenhauer/vscode-mollbe-theme/main/\"",
    "dev": "nodemon --watch ./src --watch ./build.mjs --ext mjs,json,jsonc build.mjs -- theme",
    "swatches": "node swatches.mjs \"%npm_package_config_buildOutput%\" > swatches.html"
  },
  "devDependencies": {
    "ts-node": "^10.9.1"
  }
}
